<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.plantpedia" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Plantpedia</name>
    <description>
        An app that searches a database for plant name
    </description>
    <author email="lhernandez1848@conestogac.on.ca" href="http://cordova.io">
        Lisdanay Hernandez
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	
	<icon src="icon.png" />
    <splash src="plantHand.png" width="5px" heigth="5px"/>
</widget>
